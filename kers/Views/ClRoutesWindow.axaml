<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:kers.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:kers.Views"
        mc:Ignorable="d" Width="1280" Height="720"
        x:Class="kers.Views.ClRoutesWindow"
        x:DataType="vm:ClRoutesWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="kers">
    <StackPanel>
        <Border Background="Blue">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Выйти" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Click="Exit"/>
                <TextBlock Grid.Column="1" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">Направления</TextBlock>
                <Button Grid.Column="2" Content="Мой профиль" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Click="OpenProfilWindow"/>
            </Grid>
        </Border>
        <ListBox ItemsSource="{Binding RoutesList}" Name="ListBoxRoutes" SelectionChanged="SelectRoute">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Name="Test"></TextBlock>
    </StackPanel>
</Window>    